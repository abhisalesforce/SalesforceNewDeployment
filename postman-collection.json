{
  "info": {
    "_postman_id": "sf-api-tests-collection",
    "name": "Salesforce API Tests",
    "description": "API tests for Salesforce REST APIs to validate deployment of HelloWorld and related resources.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Verify Org Authentication",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains org identity', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('identity');",
                  "    pm.expect(jsonData).to.have.property('rest');",
                  "    pm.expect(jsonData).to.have.property('sobjects');",
                  "});",
                  "",
                  "pm.test('API version is present', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('sobjects');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{org_url}}/services/data/{{api_version}}/",
              "host": ["{{org_url}}"],
              "path": ["services", "data", "{{api_version}}", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Apex REST",
      "item": [
        {
          "name": "Execute HelloWorld greet via Anonymous Apex",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Execution succeeds', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success');",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "});",
                  "",
                  "pm.test('No compile error', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.compiled).to.be.true;",
                  "});",
                  "",
                  "pm.test('Response body contains expected greeting', function () {",
                  "    pm.expect(pm.response.text()).to.include('success');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{org_url}}/services/data/{{api_version}}/tooling/executeAnonymous/?anonymousBody=System.debug(HelloWorld.greet('Salesforce'));",
              "host": ["{{org_url}}"],
              "path": [
                "services",
                "data",
                "{{api_version}}",
                "tooling",
                "executeAnonymous",
                ""
              ],
              "query": [
                {
                  "key": "anonymousBody",
                  "value": "System.debug(HelloWorld.greet('Salesforce'));"
                }
              ]
            }
          }
        },
