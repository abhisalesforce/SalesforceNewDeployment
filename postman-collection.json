    {
      "name": "REST API",
      "item": [
        {
          "name": "List Available API Versions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array of API versions', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array').that.is.not.empty;",
                  "});",
                  "",
                  "pm.test('Each version entry has required fields', function () {",
                  "    var jsonData = pm.response.json();",
                  "    jsonData.forEach(function (version) {",
                  "        pm.expect(version).to.have.property('label');",
                  "        pm.expect(version).to.have.property('url');",
                  "        pm.expect(version).to.have.property('version');",
                  "    });",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{org_url}}/services/data/",
              "host": ["{{org_url}}"],
              "path": ["services", "data", ""]
            }
          }
        },
        {
          "name": "Query Account Object Metadata",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains object metadata', function () {",
                  "    var jsonData = pm.response.json();",
                  "    var describe = jsonData.objectDescribe || jsonData;",
                  "    pm.expect(describe).to.have.property('name');",
                  "    pm.expect(describe.name).to.equal('Account');",
                  "});",
                  "",
                  "pm.test('Object is queryable', function () {",
                  "    var jsonData = pm.response.json();",
                  "    var describe = jsonData.objectDescribe || jsonData;",
                  "    pm.expect(describe.queryable).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{org_url}}/services/data/{{api_version}}/sobjects/Account/",
              "host": ["{{org_url}}"],
              "path": [
                "services",
                "data",
                "{{api_version}}",
                "sobjects",
                "Account",
                ""
              ]
            }
          }
        }
      ]
    }
