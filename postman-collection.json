    {
      "name": "Tooling API",
      "item": [
        {
          "name": "Verify HelloWorld Apex Class Exists",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('HelloWorld class is found', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('totalSize');",
                  "    pm.expect(jsonData.totalSize).to.be.at.least(1);",
                  "    pm.expect(jsonData.records).to.be.an('array').that.is.not.empty;",
                  "    pm.expect(jsonData.records[0].Name).to.equal('HelloWorld');",
                  "});",
                  "",
                  "pm.test('Class status is Active', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.records[0].Status).to.equal('Active');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{org_url}}/services/data/{{api_version}}/tooling/query/?q=SELECT Id,Name,Status FROM ApexClass WHERE Name='HelloWorld'",
              "host": ["{{org_url}}"],
              "path": [
                "services",
                "data",
                "{{api_version}}",
                "tooling",
                "query",
                ""
              ],
              "query": [
                {
                  "key": "q",
                  "value": "SELECT Id,Name,Status FROM ApexClass WHERE Name='HelloWorld'"
                }
              ]
            }
          }
        },
